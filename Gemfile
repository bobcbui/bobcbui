source "https://rubygems.org"

gem "jekyll", "~> 4.0"
gem "minima", "~> 2.5"    # 默认主题，可选择性安装

# 插件（可选）
gem "jekyll-feed"         # RSS 订阅支持
gem "jekyll-seo-tag"      # SEO 优化支持
gem "jekyll-sitemap"      # 生成站点地图
gem "jekyll-paginate"     # 分页支持
gem "jekyll-assets"       # 静态资产管理
gem "jekyll-archives"     # 归档支持




